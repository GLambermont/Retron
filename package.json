{
  "name": "retron",
  "version": "1.0.0",
  "description": "A javascript library to easily create 2d animations and games using HTML canvas",
  "main": "dist/retron.js",
  "scripts": {
    "clean:dist": "rimraf ./dist",
    "clean:docs": "rimraf ./docs",
    "docs": "npm run clean:docs && jsdoc -c jsdoc.conf.json",
    "watch": "npm run clean:dist && rollup -c --environment MODE:development -w",
    "build:dev": "npm run clean:dist && rollup -c --environment MODE:development",
    "build": "npm run clean:dist && rollup -c --environment MODE:production"
  },
  "author": "Gilbert Lambermont",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-terser": "^5.1.3"
  },
  "dependencies": {
    "pixi.js": "^5.2.0"
  }
}
