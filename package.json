{
  "name": "retron",
  "version": "1.0.0",
  "description": "A javascript library to easily create 2d animations and games using HTML canvas",
  "main": "dist/retron.js",
  "scripts": {
    "clean:build": "rimraf ./dist",
    "clean:docs": "rimraf ./docs",
    "docs": "npm run clean:docs && jsdoc -c jsdoc.conf.json",
    "lint": "eslint src/**/*.js",
    "lintfix": "npm run lint -- --fix",
    "watch": "npm run clean:build && rollup -c --environment MODE:development -w",
    "build:dev": "npm run clean:build && rollup -c --environment MODE:development",
    "build": "npm run clean:build && rollup -c --environment MODE:production"
  },
  "author": "Gilbert Lambermont",
  "license": "MIT",
  "licenseUrl": "http://www.opensource.org/licenses/mit-license.php",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "eslint": "^6.8.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.14",
    "rollup-plugin-terser": "^5.1.3"
  },
  "dependencies": {
    "pixi.js": "^5.2.0"
  },
  "pre-commit": [
    "lintfix"
  ]
}
